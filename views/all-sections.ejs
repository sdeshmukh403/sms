<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/sidebar %>
<% include ../partials/list-breadcum %>
<% include ../partials/success %>  
                                
</div>

<div class="row">
    <!-- Add Section Area Start Here -->
    <div class="col-4-xxxl col-12">
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3><%= typeof add_update_heading != 'undefined'? add_update_heading:'' %></h3>
                    </div>                                    
                </div>

                <form class="new-added-form" method="POST" action="/add-section">
                   <input type="hidden" name="id" value="<%= typeof data != 'undefined'? data.id:'' %>">
                    <div class="row">
                        <div class="col-12-xxxl col-xl-4 col-sm-6 col-12 form-group">
                            <label>Section Name</label>
                            <input type="text" placeholder="" name="name" class="form-control" value="<%= typeof data != 'undefined'? data.name:'' %>">
                        </div>
                        
                        <div class="col-12 form-group mg-t-8">
                            <button type="submit" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark add-data">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Add Section Area End Here -->
    <!-- All Section List Area Start Here -->
    <div class="col-8-xxxl col-12">
        <div class="card height-auto">
            <div class="card-body">
                <div class="heading-layout1">
                    <div class="item-title">
                        <h3>All Sections Lists</h3>
                    </div>
                    <div class="dropdown">
                        <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                            aria-expanded="false">...</a>

                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item deleteChecked" href="#"><i
                                    class="fas fa-times text-orange-red"></i>Delete</a>                           
                        </div>
                    </div>
                </div>
                <form class="mg-b-20">
                    <div class="row gutters-8">
                        <div class="col-lg-4 col-12 form-group">
                            <input type="text" name="name" placeholder="Search by Section Name ..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-12 form-group">
                            <button type="submit"
                                class="fw-btn-fill btn-gradient-yellow">SEARCH</button>
                        </div>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table display data-table text-nowrap">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input checkAll">
                                        <label class="form-check-label">Section Name</label>
                                    </div>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof datas != "undefined" && datas != null) { %>
                                <% i=0;
                                for(let data of datas) { %> 
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input checkOne" value="<%= data.id %>">
                                        <label class="form-check-label"><%= data.name %> </label>
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                            aria-expanded="false">
                                            <span class="flaticon-more-button-of-three-dots"></span>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="/delete-section/<%= data.id %>"><i
                                                    class="fas fa-times text-orange-red"></i>Delete</a>
                                           
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% i++ } } %>                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- All Section List Area End Here -->
</div>
                <% include ../partials/fadeout %>
                <% include ../partials/footer %>
<script>
    $('.deleteChecked').click(function(){
    bulkDelete("/sections-bulk-delete");
    });
</script>
